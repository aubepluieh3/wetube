extends ../base
include ../mixins/video

block content 
    div.profile__data 
        if loggedInUser.socialOnly
            img(src=user.avatarUrl, crossorigin).avatar
        else
            img(src=user.avatarUrl, crossorigin).avatar
        h3=user.name
        span=user.message 
    div.video-grid 
        each video in user.videos.reverse() 
            +video(video)
        else 
            span.empty__message No videos found    
